{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "lib": ["es2015", "dom"],
    "target": "es3",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [{
      "name": "typescript-tslint-plugin",
      "suppressWhileTypeErrorsPresent": true
    }]
  }
}
